# Colours
window-colorspace = display-p3
theme = mytheme

# Font
font-family = IBM Plex Mono
font-size = 14
font-thicken = true

# Hide the mouse cursor as soon as one starts typing
mouse-hide-while-typing = true

# Use a non-blinking bar cursor on the shell
cursor-style-blink = false
shell-integration-features = no-cursor
cursor-style = bar

# Don't show the wxh overlay after resizing
resize-overlay = never

# Don't prompt to automatically update
auto-update = off

# Split navigation keybinds
keybind = cmd+h=goto_split:left
keybind = cmd+j=goto_split:bottom
keybind = cmd+k=goto_split:top
keybind = cmd+l=goto_split:right

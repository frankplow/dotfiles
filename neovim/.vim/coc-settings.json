{
    "inlayHint.enable": false,
    "semanticTokens": {
        "enable": true,
        "filetypes": ["*"]
    },
    "clangd": {
        "compilationDatabaseCandidates": [
            "${workspaceFolder}",
            "${workspaceFolder}/build"
        ]
    },
    "rust-analyzer": {
        "server.path": "rust-analyzer"
    },
    "diagnostic": {
        "errorSign": ">",
        "hintSign": ">",
        "infoSign": ">"
    },
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                ".stack.yaml",
                ".hie-bios",
                "BUILD.bazel",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ]
        }
    }
}
